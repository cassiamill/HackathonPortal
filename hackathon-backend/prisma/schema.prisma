generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  uid       String   @unique
  email     String   @unique
  name      String?
  role      Role     @default(STUDENT)
  teamId    String?
  team      Team?    @relation(fields: [teamId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  COORDINATOR
  JUDGE
  MENTOR
  STUDENT
}

model Team {
  id        String   @id @default(cuid())
  name      String
  project   Project?
  members   User[]
  createdAt DateTime @default(now())
}

model Project {
  id          String   @id @default(cuid())
  teamId      String   @unique
  title       String
  description String
  repoUrl     String?
  demoUrl     String?
  scores      Score[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  team        Team     @relation(fields: [teamId], references: [id])
}

model Judge {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Score {
  id        String   @id @default(cuid())
  projectId String
  judgeId   String
  rubricId  String?
  criteria  Json
  total     Int
  createdAt DateTime @default(now())

  project   Project  @relation(fields: [projectId], references: [id])
  judge     Judge    @relation(fields: [judgeId], references: [id])

  @@unique([projectId, judgeId])
}

model Rubric {
  id        String   @id @default(cuid())
  name      String
  schema    Json
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model ScheduleItem {
  id        String   @id @default(cuid())
  title     String
  location  String?
  startsAt  DateTime
  endsAt    DateTime
  createdAt DateTime @default(now())
}

model Update {
  id        String   @id @default(cuid())
  teamId    String
  message   String
  createdBy String
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id])
}

model Survey {
  id        String   @id @default(cuid())
  title     String
  schema    Json
  createdAt DateTime @default(now())
}

model SurveyResponse {
  id        String   @id @default(cuid())
  surveyId  String
  userId    String
  answers   Json
  createdAt DateTime @default(now())

  survey    Survey   @relation(fields: [surveyId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([surveyId, userId])
}
